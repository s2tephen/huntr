<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-inputs">
    <div class="row">
      <%= f.input :email, :required => true, :label => false, input_html: { :class => 'form-control input-lg' }, wrapper_html: { :class => 'col-sm-12 col-md-12 col-lg-12' }, :placeholder => 'Email (@mit.edu addresses only)' %>
    </div>
    <div class="row">
      <%= f.input :password, :required => true, :label => false, input_html: { :class => 'form-control input-lg' }, wrapper_html: { :class => 'col-sm-6 col-md-6 col-lg-6' }, :placeholder => 'Password' %>
      <%= f.input :password_confirmation, :required => true, :label => false, input_html: { :class => 'form-control input-lg' }, wrapper_html: { :class => 'col-sm-6 col-md-6 col-lg-6' }, :placeholder => 'Confirm password' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>