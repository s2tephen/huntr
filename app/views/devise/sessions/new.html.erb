<% body_class "login" %>
<div class='row front'>
	<div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
		<h1><strong>Your new hunting ground.</strong> No emails, no fuss.</h1>
	</div>
	<div class='col-xs-6 col-sm-6 col-md-6 col-lg-6'>
		<h2>Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  	<div class="form-inputs">
	    	<div class="row">
			  	<%= f.input :email, :required => false, :label => false, input_html: { :class => 'form-control input-lg' }, wrapper_html: { :class => 'col-sm-12 col-md-12 col-lg-12' }, :placeholder => 'Email' %>
	      </div>
	      <div class="row">
	        <%= f.input :password, :required => false, :label => false, input_html: { :class => 'form-control input-lg' }, wrapper_html: { :class => 'col-sm-12 col-md-12 col-lg-12' }, :placeholder => 'Password' %>
	      </div>
	    </div>

		  <div class="form-actions">
	      <%= f.button :submit, :value => "Sign in", :class => 'pull-left' %>
	      <%= button_to 'Forgot your password?', new_password_path(resource_name, method: :get), class: 'btn pull-left' %>
	      <div class="checkbox">
	        <%= f.input :remember_me, :wrapper => false, :as => :boolean if devise_mapping.rememberable? %>
	      </div>
	    </div>
		<% end %>
	</div>

	<div class='col-xs-6 col-sm-6 col-md-6 col-lg-6'>
		<%= render :file => 'devise/registrations/new' %>
	</div>
</div>
