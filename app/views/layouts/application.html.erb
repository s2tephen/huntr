<!DOCTYPE html>
<html>
<head>
  <title>Huntr</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar-bg"></div>
<div class="container">
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">huntr</a>
    </div>
    <p class="navbar-text navbar-right">
      <% if user_signed_in? %>
        <strong><%= current_user.email %></strong>
        <%= link_to raw("<i class='fa fa-user'></i>"), edit_user_registration_path, :class => 'navbar-link' %>
        <%= link_to raw("<i class='fa fa-sign-out'></i>"), destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% end %>
    </p>
  </nav>

<!--   <% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %> -->

  <%= yield %>
</div>
</body>
</html>
