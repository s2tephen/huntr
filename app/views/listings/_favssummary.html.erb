<% @fav_listings.each do |listing| %>

<% if current_user.favorites.find_by_listing_id(listing.id).read %>
<div class="col-md-12 btn btn-default listing-area" id="listing-<%= listing.id %>">
<% else %>
<div class="col-md-12 btn btn-default listing-area listing-unread" id="listing-<%= listing.id %>">
<% end %>
  <h3 class="listing-name"><%= listing.name %></h3>
  <p class="listing-meta">
    <i class="fa fa-calendar-o"></i> <%= listing.updated_at.strftime("%b %e â€” %l:%M %p") %>
    <%= listing.category %>
      <i class="fa fa-star fav-button" id='fav-button-<%= listing.id %>'></i>
  </p>
</div>

<% end %>