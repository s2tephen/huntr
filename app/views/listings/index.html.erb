<div class="container">
  <div class="row" style="margin-right: 20px">
    <!-- Favorites summary -->
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 left-pane">
      <div class="row section-header">
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 header-text"><i class="fa fa-star"></i>  FAVORITES</div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <div class="rt-btn btn btn-default" id="favsbutton"> hide </div>
        </div>
      </div>
      <div class="row listing-container" id="favslist">
        <%= render "favs_summary" %>
      </div>
      
      <div class="row section-header" name="listings">
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 header-text"><i class="fa fa-list"></i>  FEED</div>
        <!-- Search listings form -->
        <%= form_tag url_for(:controller => 'listings', :action => 'search_results'), 
          :method => :get, :remote=>true, :id => 'search_results' do  %>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 input-group input-group-sm">
            <span class="input-group-addon glyphicon glyphicon-search"></span>
            <%= text_field_tag :query, params[:query], class: "form-control" %>
          </div>
        <% end %>
        
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Category <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <%= %>
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </div>
      </div>
      
      <!-- Listings summary -->
      <div class="row listing-container" id="feedlist">
        <%= render "listings_summary" %>
      </div>
      
      <!-- Page footer -->
      <div class="row footer">
        &copy; 2013 Huntr <span>â€¢</span> Anne Hunter has sent <%= pluralize(Listing.where(updated_at: Time.now.midnight..Time.now).length, 'email') %> today.
      </div>
    </div>

    <!-- Right pane -->
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <div class="row right-pane">
        <div id="calendar"><%= render "calendar" %></div>
        <div id="listing"></div>
      </div>
    </div>
  </div>
</div>