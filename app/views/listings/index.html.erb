<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <div class='row section-header'>
        <div class='col-md-8 header-text'>FAVORITES</div>
        <div class='col-md-4'>
          <div class='showfavs rt-btn btn btn-default' id='favsbutton'> hide </div>
        </div>
      </div>
      <div class='row listingcontainer' id='favslist'>
        <% @favorites.each do |listing| %>
        <div class='col-md-12 btn btn-default listingarea'>
          <div class='row'>
            <div class='col-md-12 listing-name' id='listingname'><%= listing.name %></div>
          </div>
          <div class='row'> 
            <div class='col-md-6 listing-info'><%= listing.updated_at %></div>
            <div class='col-md-6 listing-info'><%= listing.category %></div>
          </div>
        </div>

        <% end %>

      </div>

      <br/>
      <div class='row section-header' name='listings'>
        <div class='col-md-8 header-text'> FEED </div>
        <div class='col-md-4'>
          <div class='feedall rt-btn btn btn-default' id='archivebutton'>View Archive</div>
          <div class='feedall rt-btn btn btn-default' style="display:none" id='feedbutton'>View All</div>
        </div>
        <div class="col-md-6 input-group input-group-sm">
          <span class="input-group-addon glyphicon glyphicon-search"></span>
          <input type="text" class="form-control">
        </div>
        <div class="col-md-6"><button class="rt-btn btn btn-default">Search</button></div>
        
      </div>
      <div class='row listingcontainer' id='feedlist'>
        <%= render 'listingssummary' %>
      </div>

    </div>


    <div class='col-md-8'>
      <div class='row section header'>
        <div class='calendarview' id='calendar'> insert calendar here</div>
      </div>
      <!-- ajax display listing detail?-->
    </div>
  </div>

  <br/>
  <div class='row stats-bar'>
    <div class='col-md-12'>huntr stats bar</div>
  </div>
</div>
