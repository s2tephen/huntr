<% @listings.each do |listing| %>
<div class="col-md-12 btn btn-default listing-area">
  <div class="listing-details" id="listing-<%= listing.id %>">
    <h3 class="listing-name"><%= listing.name %></h3>
    <p class="listing-meta">
      <i class="fa fa-calendar-o"></i> <%= listing.updated_at.strftime("%b %e â€” %l:%M %p") %>
      <%= listing.category %>
    </p>
  </div>
  <div class="listing-favorite">
    <% if current_user.listings.include?(listing) %>
      <i class="fa fa-lg fa-crosshairs favorited listing-star listing-<%= listing.id %>" id='fav-button-<%= listing.id %>'></i>
    <% else %>
      <i class="fa fa-lg fa-crosshairs listing-star listing-<%= listing.id %>" id='fav-button-<%= listing.id %>'></i>
    <% end %>
  </div>
</div>
<% end %>